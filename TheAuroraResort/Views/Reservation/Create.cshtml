
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<h1>Create Your Reservation</h1>
<div class="bg-agile">
    <div class="book-reservation">
        <form action="#" method="post">
            <div class="form-date">
                <label><i class="fa fa-user" aria-hidden="true"></i>Name:</label>
                <input type="text" name="Name" placeholder="Your Name" required="" />
            </div>
            <br>
            <div class="form-date">
                <label><i class="fa fa-envelope" aria-hidden="true"></i>Email:</label>
                <input type="email" name="email" placeholder="Your Email" required="" />
            </div>
            <br>
            <div class="form-date">
                <label><i class="fa fa-calendar" aria-hidden="true"></i>Reservation Date:</label>
                <input type="datetime-local" name="Text" placeholder="mm/dd/yyyy" value="mm/dd/yyyy" onfocus="this.value = ' ';" required="" />
            </div>
            <br>
            <div class="form-left">
                <label><i class="fa fa-clock-o" aria-hidden="true"></i>Reservation Date:</label>
                <input type="datetime-local" name="Text" placeholder="mm/dd/yyyy" value="mm/dd/yyyy" onfocus="this.value = ' ';" required="" />
            </div>
            <br>
            <div class="form-left">
                <label><i class="fa fa-home" aria-hidden="true"></i>Choose A Room Style:</label>
                <select class="form-control">
                    <option>Room</option>
                    <option>Modern</option>
                    <option>Luxury</option>
                    <option>Extended Stay</option>
                    <option>Loft</option>
                </select>
            </div>

        </form>
    </div>
</div>

